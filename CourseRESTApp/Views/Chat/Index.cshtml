@model IEnumerable<Chat>

<form action="Chat/CreateChatroom" method="POST">
    <input type="text" name="name" placeholder="Name of new room" />
    <input type="submit" value="Create" />
</form>

<form action="Chat/Index" method="GET">
    <input type="text" name="search" placeholder="Search" />
    <input type="submit" value="Search" />
</form>

<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <vc:room></vc:room>
    }
</div>

<div class= "row">
    <h2>Other rooms: </h2>
    @foreach (var chat in Model)
    {
        <a class="room-button" asp-controller="Chat" asp-action="JoinRoom" asp-route-id="@chat.Id" method="GET">
            @chat.Name
        </a>
    }
</div>


<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>