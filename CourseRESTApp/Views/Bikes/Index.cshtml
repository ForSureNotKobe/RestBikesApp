@model CourseRESTApp.Models.BikeBrandViewModel

@{
    ViewData["Title"] = "Bike Catalog";
}

<h1>Bike Catalog</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Bikes" asp-action="Index" method="get">
    <p>

        <select asp-for="BikeBrand" asp-items="Model.Brands">
            <option value="">All</option>
        </select>

        Search by model: <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Bikes[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes[0].ProdYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes[0].WheelSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes[0].FrameSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bikes[0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bikes)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WheelSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FrameSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
